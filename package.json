{
  "name": "currency-conversion-service",
  "version": "1.0.2",
  "description": "Currency conversion microservice",
  "main": "index.js",
  "scripts": {
    "cover": "NODE_ENV=test istanbul cover -x '*test.js' _mocha -- -R spec",
    "check-coverage": "istanbul check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "check-lint": "eslint --fix *.js lib/*.js test/*.js routes/*.js",
    "eureka": "docker start eureka 2> /dev/null || docker run -d -p 8080:8080 --name eureka netflixoss/eureka:1.3.1",
    "docker-build": "docker build -t currency-conversion-service:$(node -p \"require('./package').version\") .",
    "start": "NODE_ENV=production node cluster.js",
    "dev": "node cluster.js",
    "test": "NODE_ENV=test LOG_LEVEL=test mocha -R spec"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run check-lint && npm run cover #&& npm run check-coverage",
      "pre-push": "npm run check-coverage"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EveryMundo/currency-conversion-service.git"
  },
  "keywords": [],
  "author": "Daniel Santana <daniel@everymundo.com>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/EveryMundo/currency-conversion-service/issues"
  },
  "homepage": "https://github.com/EveryMundo/currency-conversion-service#readme",
  "devDependencies": {
    "chai": "^4.1.2",
    "istanbul": "^1.1.0-alpha.1",
    "mocha": "^3.5.3",
    "nock": "^9.0.22",
    "sinon": "^3.3.0"
  },
  "dependencies": {
    "dotenv": "^4.0.0",
    "em-logr": "^1.2.0",
    "eureka-js-client": "^4.3.0",
    "fastify": "^0.26.2",
    "fastify-helmet": "^1.0.1",
    "ghooks": "^2.0.0",
    "microtime": "^2.1.6",
    "request-promise": "^4.2.2",
    "request-promise-native": "^1.0.5",
    "resilient": "^0.3.4"
  }
}
